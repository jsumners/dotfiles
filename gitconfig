  gpgsign = true

[core]
  pager = delta
  excludesFile = ~/.gitignore

[delta]
  navigate = true
  side-by-side = true

[diff]
  colorMoved = default

[gpg]
  format = ssh

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

